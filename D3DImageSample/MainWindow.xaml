<Window x:Class="D3DImageSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
        xmlns:local="clr-namespace:D3DImageSample"
        xmlns:my="clr-namespace:D3DImageSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="background" Background="Aquamarine" Panel.ZIndex="1"></Grid>
        <Image Source="{DynamicResource ImageSource1}" Panel.ZIndex="3"></Image>
        <my:DXControl x:Name="fastGLControl1" Panel.ZIndex="2"/> 
    </Grid>
</Window>
